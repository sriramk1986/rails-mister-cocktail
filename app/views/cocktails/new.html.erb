<div class="container mt-3">
    <h1 class="text-center mb-3">Add a new cocktail</h1>
    <div class="row mt-3 justify-content-center pt-3">
        <div class="col-6">
            <%= simple_form_for(@cocktail) do |f| %>
            <%= f.input :name %>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
            <%= f.button :submit, "Add cocktail", class: "btn btn-flat" %>
            <% end %>
        </div>
    </div>
</div>
