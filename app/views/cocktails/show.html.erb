<div class="container">
    <div class="row justify-content-center text-center m-5">
        <div class="col-12">
            <h1>
                <%= @cocktail.name %>
            </h1>
        </div>
    </div>
    <div class="row justify-content-center text-center m-5">
        <div class="col-12">
            <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fit %>
        </div>
    </div>
    <% @cocktail.doses.each do |dose| %>
    <div class="row justify-content-center text-center m-1">
        <div class="col-6">
            <div class="d-flex justify-content-between">
                <%= dose.description %> of
                <%= dose.ingredient.name %>
                <%= link_to "Delete", dose_path(dose), method: :delete %>
            </div>
        </div>
    </div>
    <% end %>
    <div class="row justify-content-center text-center mt-4">
        <div class="col-12">
            <%= link_to "Add a Dose", new_cocktail_dose_path(@cocktail), :class => "btn btn-flat" %>
        </div>
    </div>
</div>
</div>
<br>
